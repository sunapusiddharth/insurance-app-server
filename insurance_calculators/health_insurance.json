{
  "insurance_type": "health",
  "version": "1.3",
  "questions": [
    {
      "id": "age",
      "type": "number",
      "label": "What is your age?",
      "min": 18,
      "max": 85,
      "mandatory": true,
      "ui": { "order": 1, "depends_on": null }
    },
    {
      "id": "gender",
      "type": "radio",
      "label": "Gender",
      "options": [
        { "value": "male", "label": "Male" },
        { "value": "female", "label": "Female" },
        { "value": "other", "label": "Other" }
      ],
      "mandatory": true,
      "ui": { "order": 2, "depends_on": null }
    },
    {
      "id": "smoker",
      "type": "radio",
      "label": "Do you smoke or consume tobacco?",
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        { "value": "occasionally", "label": "Occasionally" }
      ],
      "mandatory": true,
      "ui": { "order": 3, "depends_on": null }
    },
    {
      "id": "bmi",
      "type": "number",
      "label": "What is your BMI? (Optional)",
      "min": 10,
      "max": 50,
      "mandatory": false,
      "ui": { "order": 4, "depends_on": null }
    },
    {
      "id": "pre_existing",
      "type": "checkbox",
      "label": "Do you have any pre-existing conditions?",
      "options": [
        { "value": "diabetes", "label": "Diabetes" },
        { "value": "hypertension", "label": "High Blood Pressure" },
        { "value": "heart_disease", "label": "Heart Disease" },
        { "value": "asthma", "label": "Asthma/COPD" },
        { "value": "cancer", "label": "Cancer (in remission)" },
        { "value": "none", "label": "None" }
      ],
      "mandatory": false,
      "ui": {
        "order": 5,
        "depends_on": {
          "question_id": "smoker",
          "value": ["yes", "occasionally"]
        }
      }
    },
    {
      "id": "family_size",
      "type": "select",
      "label": "How many members to cover?",
      "options": [
        { "value": "1", "label": "Self" },
        { "value": "2", "label": "Self + Spouse" },
        { "value": "3", "label": "Self + 2 Kids" },
        { "value": "4+", "label": "Family of 4+" }
      ],
      "mandatory": true,
      "ui": { "order": 6, "depends_on": null }
    },
    {
      "id": "city",
      "type": "select",
      "label": "Your City of Residence",
      "options": [
        { "value": "delhi", "label": "Delhi" },
        { "value": "mumbai", "label": "Mumbai" },
        { "value": "bangalore", "label": "Bangalore" },
        { "value": "chennai", "label": "Chennai" },
        { "value": "kolkata", "label": "Kolkata" },
        { "value": "hyderabad", "label": "Hyderabad" },
        { "value": "other", "label": "Other" }
      ],
      "mandatory": true,
      "ui": { "order": 7, "depends_on": null }
    },
    {
      "id": "preferred_hospitals",
      "type": "text",
      "label": "Preferred Hospital Network (Optional)",
      "placeholder": "Eg: Apollo, Max, Fortis",
      "mandatory": false,
      "ui": {
        "order": 8,
        "depends_on": {
          "question_id": "family_size",
          "value": ["2", "3", "4+"]
        }
      }
    },
    {
      "id": "sum_insured",
      "type": "select",
      "label": "Desired Sum Insured",
      "options": [
        { "value": "300000", "label": "₹3 Lakh" },
        { "value": "500000", "label": "₹5 Lakh" },
        { "value": "1000000", "label": "₹10 Lakh" },
        { "value": "2000000", "label": "₹20 Lakh" },
        { "value": "5000000", "label": "₹50 Lakh" }
      ],
      "mandatory": true,
      "ui": { "order": 9, "depends_on": null }
    }
  ]
}